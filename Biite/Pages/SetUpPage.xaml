<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biite.Pages.SetUpPage"
             Title="Setup">

    
    <ScrollView>
        

        <Grid Padding="24">
            <Grid RowDefinitions="*,Auto,*">
                <Frame Grid.Row="1" Padding="20" CornerRadius="16" BackgroundColor="GhostWhite" HasShadow="True">
                    <VerticalStackLayout Padding="24" Spacing="12">

                        <Button Text="Back to Login" BackgroundColor="#E4A44D" TextColor="Black" Clicked="OnBackClicked" HorizontalOptions="Start"/>
                        
                        <Entry Placeholder="Your name" Text="{Binding Name}"/>
                        <Entry Placeholder="Your Email" Text="{Binding Email}"/>
                        <Entry Placeholder="Your Phone Number" Text="{Binding PhoneNumber}"/>
                        <Entry Placeholder="City or area" Text="{Binding Location}"/>


                        <Button Text="Save and Continue" BackgroundColor="#E4A44D" TextColor="Black" Clicked="OnSaveClicked"/>


                    </VerticalStackLayout>
                </Frame>
            </Grid>
       
        </Grid>
    </ScrollView>
</ContentPage>
