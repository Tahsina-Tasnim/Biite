<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biite.Pages.LoginPage"
             Shell.NavBarIsVisible="False"
             Title="Login">


    <Grid Padding="24">
        <Grid RowDefinitions="*,Auto,*">
            <Frame Grid.Row="1" Padding="20" CornerRadius="16" BackgroundColor="GhostWhite" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Image Source="biite_icon.png" HeightRequest="64" HorizontalOptions="Center"/>
                    <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
                    <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
                    <Button Text="Log In" BackgroundColor="#E4A44D" TextColor="Black" Clicked="OnLoginClicked"/>
                    <Button Text="Create Account" BackgroundColor="#E4A44D" TextColor="Black" Clicked="OnSignUpClicked"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
